#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    int i,a[n],s=0,x=0;
	    for(i=0;i<n;i++)
	    {
	        cin>>a[i];
	        if(a[i]==-1)
	        s++;
	        else
	        x++;
	    }
	    if(abs(s-x)%2!=0)
	    cout<<-1<<endl;
	    else
	    cout<<(abs(s-x)/2)<<endl;
	}
	return 0;
}
